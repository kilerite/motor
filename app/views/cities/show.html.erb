<div class="container mt-5">
  <p class="alert alert-success"><%= notice %></p>

  <h1 class="text-center">Detalles</h1>

  <div class="card">
    <div class="card-body">
      <%= render @city %>
    </div>
  </div>

  <div class="mt-4  ">
    <%= link_to "Editar Ciudad", edit_city_path(@city), class: "btn btn-primary" %> |
    <%= link_to "Regresar", cities_path, class: "btn btn-secondary" %>
 </div>
 <div class="mt-4  ">
    <%= button_to "Eliminar Ciudad", @city, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
